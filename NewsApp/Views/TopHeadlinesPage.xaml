<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:NewsApp.Views"
             xmlns:vm="clr-namespace:NewsApp.ViewModels"
             x:Name="TopHeadlines"
             x:Class="NewsApp.Views.TopHeadlinesPage">
    <ContentPage.BindingContext>
        <vm:TopHeadlinesViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollView Orientation="Vertical"
                    VerticalScrollBarVisibility="Default"
                    Grid.Row="0"
                    x:Name="newsListView"
                    IsVisible="{Binding HasContentLoaded}">
            <views:NewsListView/>
        </ScrollView>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="CenterAndExpand"
                     Grid.Row="1"
                     Padding="10">
            <Button Text="{Binding LoadRefreshNews}"
                    Command="{Binding LoadNewsArticlesCommand}"
                    CommandParameter="{Binding Source={x:Reference newsListView}}"/>
        </StackLayout>
        
    </Grid>

</ContentPage>

