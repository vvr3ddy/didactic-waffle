<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Views.NotificationBannerView">
    <Grid BackgroundColor="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Text="Would you like to receive notifications?"
               VerticalOptions="CenterAndExpand"/>
        <Button Text="Dismiss"
                Command="{Binding DismissBannerCommand}"
                Grid.Column="1"/>

        <Button Text="Allow Notifications"
            Command="{Binding AllowNotificationsCommand}"
            HorizontalOptions="Center"
            VerticalOptions="End"/>
    </Grid>
</ContentView>

